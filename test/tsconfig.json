{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
