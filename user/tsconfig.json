{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["minista/client"]
  },
  "include": ["./minista.config.ts", "src"]
}
